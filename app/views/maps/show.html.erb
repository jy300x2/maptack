<br />
<div class="booyah-box col-xs-10 col-xs-offset-1 text-center">
  <h2 class="text-center"><%= @map.title %></h2>
  <p class="text-center"><%= @map.description %></p>
  <%= link_to "Return to your maps", maps_path %>
  <br />
  <br />
  <script src="http://openlayers.org/en/v3.17.1/build/ol.js" type="text/javascript">
  </script>
  <script type="text/javascript">
    var map = new ol.Map({
      target: 'map',
      layers: [
        new ol.layer.Tile({
          source: new ol.source.OSM()
        })
      ],
      view: new ol.View({
        center: ol.proj.fromLonLat([37.41, 8.82]),
        zoom: 12
      })
    });
  </script>
  <div id="map" class="map"></div>
  <p></p>
  <div class="pull-right">
    <%= link_to 'Edit your map', edit_map_path, class: 'btn btn-info' %>
    <%= link_to 'Delete map', map_path(@map), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
  </div>
</div>